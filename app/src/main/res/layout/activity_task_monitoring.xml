<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.crioprecipitati.androidpervasive1718.viewPresenter.login.LoginActivity"
        tools:layout_editor_absoluteY="25dp"
        android:autofillHints="username"
>

        <Button
                android:text="Termina task corrente"
                android:layout_width="209dp"
                android:layout_height="163dp"
                android:id="@+id/btnRequestOpenSessions"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/glVertical"
                android:fontFamily="monospace"
                app:layout_constraintTop_toTopOf="@+id/glHorizontal"
                android:layout_marginTop="8dp"
        />
        <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/glVertical"
                app:layout_constraintGuide_begin="225dp"
                android:orientation="vertical"
        />
        <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/glHorizontal"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="180dp"
        />

        <android.support.design.widget.TextInputLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:autofillHints="username"
                app:layout_constraintStart_toStartOf="@+id/rgMemberType"
                android:id="@+id/tilUsername"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
                android:text="Nome manovra corrente"
                android:layout_width="356dp"
                android:layout_height="158dp"
                android:textSize="38dp"
                android:textAlignment="center"
                android:id="@+id/activityName" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/glHorizontal" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="@+id/glVertical"
                android:layout_marginStart="8dp"/>
        <TableLayout
                android:layout_width="573dp"
                android:layout_height="115dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" android:id="@+id/lifeParametersTable" >

                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
        </TableLayout>
</android.support.constraint.ConstraintLayout>
