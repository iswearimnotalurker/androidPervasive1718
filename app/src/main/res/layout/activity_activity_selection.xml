<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="73dp"
        >

    <TextView
            android:text="Farmaci"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:id="@+id/lbl"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/lbl2View4"
            />
    <TextView
            android:text="Manovre"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:id="@+id/lbl2View4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintStart_toEndOf="@+id/lbl"
            app:layout_constraintHorizontal_bias="0.5"
            />
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvManouversList"
            android:layout_width="284dp"
            android:layout_height="0dp"
            tools:listitem="@layout/item_activity"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/rvDrugsList"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lbl"
            />
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvDrugsList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:listitem="@layout/item_activity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lbl2View4"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/rvManouversList"
            app:layout_constraintHorizontal_bias="0.5"
            />
    <ProgressBar
            android:id="@+id/pbActivitiesSpinner"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            />
</android.support.constraint.ConstraintLayout>