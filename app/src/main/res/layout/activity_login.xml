<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.crioprecipitati.androidpervasive1718.viewPresenter.login.LoginActivity"
        tools:layout_editor_absoluteY="25dp"
        android:autofillHints="username"
        >


    <Button
            android:text="Crea nuova sessione"
            android:layout_width="209dp"
            android:layout_height="163dp"
            android:id="@+id/btnCreateNewSession"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/glVertical"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glHorizontal"
            android:fontFamily="monospace"
            />
    <Button
            android:text="Richiedi sessioni aperte"
            android:layout_width="209dp"
            android:layout_height="163dp"
            android:id="@+id/btnRequestOpenSessions"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/glVertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCreateNewSession"
            android:fontFamily="monospace"
            />
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glVertical"
            app:layout_constraintGuide_begin="225dp"
            android:orientation="vertical"
            />
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glHorizontal"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="180dp"
            />
    <android.support.v7.widget.RecyclerView
            android:layout_width="350dp"
            android:layout_height="343dp"
            tools:layout_editor_absoluteX="234dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:listitem="@layout/item_session"
            android:id="@+id/rvSessionList"
            />
    <android.support.design.widget.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:autofillHints="username"
            app:layout_constraintStart_toStartOf="@+id/radioGroup"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/textInputLayout"
            >

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="username"
                android:fontFamily="monospace"
                />
    </android.support.design.widget.TextInputLayout>
    <RadioGroup
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:id="@+id/radioGroup"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glHorizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            >
        <RadioButton
                android:text="Leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbLeader"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:checked="true"
                />
        <RadioButton
                android:text="Membro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbMember"
                android:layout_weight="1"
                android:fontFamily="monospace"
                />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>
